    <converter>
		<converter-id>DateConverter</converter-id>
		<converter-class>hr.kingict.svis.web.converter.DateConverter</converter-class>
	</converter>
	
	<converter>
		<converter-id>DatetimeConverter</converter-id>
		<converter-class>hr.kingict.svis.web.converter.DatetimeConverter</converter-class>
	</converter>
	
	<converter>
        <converter-id>BigDecimalConverter</converter-id>
        <converter-class>hr.kingict.svis.web.converter.BigDecimalConverter</converter-class>
    </converter>
    
    <converter>
        <converter-id>BigDecimalZeroConverter</converter-id>
        <converter-class>hr.kingict.svis.web.converter.BigDecimalZeroConverter</converter-class>
    </converter>
    
    <converter>
        <converter-id>IntegerConverter</converter-id>
        <converter-class>hr.kingict.svis.web.converter.IntegerConverter</converter-class>      
    </converter>
    
    <converter>
        <converter-id>LongConverter</converter-id>
        <converter-class>hr.kingict.svis.web.converter.LongConverter</converter-class>      
    </converter>
    
     <converter>
        <converter-id>GenericConverter</converter-id>
        <converter-class>hr.kingict.svis.web.converter.GenericConverter</converter-class>      
    </converter>
    
    <converter>
        <converter-id>ObjectConverter</converter-id>
        <converter-class>hr.kingict.svis.web.converter.ObjectConverter</converter-class>      
    </converter>
    
    <converter>
        <converter-id>LookupConverter</converter-id>
        <converter-class>hr.kingict.svis.web.converter.LookupConverter</converter-class>      
    </converter>
    
